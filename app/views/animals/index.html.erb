

 
<% @animals.in_groups_of(3, false).each do |group| %>
     
<div class="row">
    
 <% group.each do |animal| %>
 <div class="col s4">
      <div class="card">
        <div class="card-image">
          <%= cl_image_tag animal.image %>
          <span class="card-title blue-text text-darken-4"><%= animal.title %> , <%= animal.status %></span>
        </div>
        <div class="card-content">
          <p> <%= animal.description %></p>
          <p> in <%= animal.city %></p>
          <p>  <%= animal.animal_type %>, <%= animal.gender %></p>
        </div>
        <div class="card-action">
          <a href=<%= animal_path(animal) %>>Details</a>
        </div>
      </div>
       </div>
      <% end %>
   
  </div>  
  <% end %>

  
