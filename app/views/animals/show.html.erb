
      
    <div class="row">

      <div class="col s4">
       <div class="card ">
        <div class="card-content">
      
       
 <div><%= cl_image_tag  @animal.image , :size => "260x180"%></div>
 <%= @animal.title %>
 <p>Description: <%= @animal.description %></p>
 <p>Type: <%= @animal.animal_type %></p>
 <p>Gender: <%= @animal.gender %></p>
 <p>City: <%= @animal.city %></p>
  <p>Location: <%= @animal.location %></p>
  <p>Posted by: <%=  link_to @animal.user.username ,user_path(@animal.user)%></p>
  <p>Posted Date: <%= @animal.created_at.strftime "%B %d, %Y"  %></p>
      </div>
      </div>
    <% if current_user &&current_user == @animal.user%> 

          <%= button_to "Update status to adopted", "/animals/#{params[:id]}/adopted", method: :put ,class:"waves-effect waves-light btn",data: { confirm: 'Are you sure you want to change animal status to adopted?' }%>
<br>
<%= button_to "Update status to returned", "/animals/#{params[:id]}/returned", method: :put ,class:"waves-effect waves-light btn",data: { confirm: 'Are you sure you want to change animal status to returned?' }%>
<% end %>

      </div>
      
      <div class="col s8">
        <!-- Promo Content 2 goes here -->
   <section class="section comments">
    <div class="container">

        <h4 class="subtitle is-5"><strong><%=  pluralize @animal.comments.count,"comment" %></strong> </h4>
        <%#= show the user and comment content from comment.html  %>
        <%= render @animal.comments %>
        <div class="comment-form">
            <hr />
            <p class="subtitle is-3">Leave a reply</p>
             <%= render 'comments/form' %>
        </div>
    </div>
</section> 
</div> 




        

</div>
   

