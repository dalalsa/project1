<div class = "row">
<div class = "col s6">
<%= form_for @animal do |f| %>
<div>
<%= f.label :title %>
</div>

<div>
<%= f.text_field :title  , required: true %>
</div>

<div>
<%= f.label :description %>
</div>

<div>
<%= f.text_area :description , required: true  %>
</div>

<div>
<%= f.label :image %>
</div>
<div>
<%= f.file_field :image %>
</div>


<div>
  <%= f.label :animal_type  %>
  <%= f.select :animal_type, [[t('site.global.cat'),'cat'],[t('site.global.dog'),'dog'],[t('site.global.rabbit'),'rabbit'],[t('site.global.bird'),'bird'],[t('site.global.other'),'other']] %>
</div>

<div >
    <%= f.label :gender %><br />
    <%= f.label :gender, t(".female"), :value => "female"  %>
    <%= f.radio_button :gender, "female"  %>
    <%= f.label :gender, t(".male"), :value => "male" %>
    <%= f.radio_button :gender, "male" , :checked => "female" %>
</div>




<div>
<%= f.label :city %>
<%= f.text_field :city  , required: true %>
</div>

<div>
<%= f.label :location %>
<%= f.text_field :location  , required: true %>
</div>

<div>
<%= f.label t(".choose")%>
<%= f.select :status, [[t('site.global.missing'),'missing'], [t('site.global.found'),'found'],[t('site.global.animals-in-need'),'animals-in-need'],[t('site.global.for_adoption'),'for_adoption']]%>
</div>




<div>
<%= f.submit %>
</div>
<% end %>
</div>
</div>